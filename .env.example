# ===================================================================
# DORMEX - Environment Variables Template
# ===================================================================
# Copy this file to .env and fill in the values.
# NEVER commit the .env file to version control!
# ===================================================================

# Server Configuration
SERVER_PORT=8080

# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=dormex_db
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# JWT Configuration
# Generate a secure secret key (minimum 256 bits / 32 characters)
# You can use: openssl rand -base64 32
JWT_SECRET=your_super_secure_jwt_secret_key_here_min_32_chars
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Google OAuth2 Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8080/login/oauth2/code/google

# CORS Configuration
# Comma-separated list of allowed frontend origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Admin Default Account
# This account is created on first application startup
ADMIN_EMAIL=admin@dormex.com
ADMIN_PASSWORD=your_secure_admin_password
ADMIN_NAME=System Admin

# Logging (Optional)
SHOW_SQL=false
SECURITY_LOG_LEVEL=INFO
HIBERNATE_LOG_LEVEL=INFO
